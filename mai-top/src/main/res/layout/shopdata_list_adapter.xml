<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:background="@color/white">

    <ImageView
        android:id="@+id/lf_jpg"
        android:layout_width="100dip"
        android:layout_height="100dip" 
        android:src="@drawable/id_card"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dip"
        android:orientation="vertical" >
     <TextView 
         android:id="@+id/shop_title"
         android:layout_width="wrap_content"
         android:text="折合478.50元 Cambridge Satchel TINY SATCHEL 女款 小号剑桥包"
         android:textSize="13sp"
         android:maxLines="2"
         android:textColor="@color/black"
         android:clickable="true"
         android:layout_height="wrap_content"
         />
     
     <TextView 
         android:id="@+id/shop_detail"
         android:layout_width="wrap_content"
         android:text="MYBAG现这款Cambridge Satchel的小号剑桥包售价55英镑，喜欢可入~ \t剑桥包公司（The Cambridge Satchel Company）于2008年由居住在剑桥的一对母\t\t..."
         android:maxLines="2"
         android:ellipsize="end"
         android:textColor="@color/black2"
         android:textSize="12sp"
         android:layout_height="wrap_content"
         />
     <LinearLayout android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="bottom"
         android:orientation="horizontal">
         <View 
             android:layout_width="wrap_content" android:layout_height="wrap_content"
             android:layout_weight="1"/>
         <TextView 
         android:id="@+id/mail"
         android:layout_width="wrap_content"
         android:textSize="10sp"
         android:textColor="@color/black"
         android:text="京东"
         android:padding="10dip"
         android:layout_height="wrap_content"
             />
         <Button 
         android:id="@+id/loadUrl"
         android:layout_width="wrap_content"
         android:padding="5dip"
         android:background="@color/red"
         android:text="直达链接"
         android:textColor="@color/white"
         android:textSize="12sp"
         android:layout_height="wrap_content"
             />
     </LinearLayout>
    </LinearLayout>

</LinearLayout>