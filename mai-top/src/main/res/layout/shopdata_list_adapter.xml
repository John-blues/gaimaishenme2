<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/lf_jpg"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:src="@drawable/id_card" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:maxLines="2"
            android:text="折合478.50元 Cambridge Satchel TINY SATCHEL 女款 小号剑桥包"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/shop_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="MYBAG现这款Cambridge Satchel的小号剑桥包售价55英镑，喜欢可入~ \t剑桥包公司（The Cambridge Satchel Company）于2008年由居住在剑桥的一对母\t\t..."
            android:textColor="@color/black2"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12分钟前"
                android:textColor="@color/black2"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:text="京东"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <Button
                android:id="@+id/loadUrl"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_margin="3dip"
                android:background="@color/red"
                android:padding="5dip"
                android:text="直达链接"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>